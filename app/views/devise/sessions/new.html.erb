<div class="col-md-4 col-md-offset-4 col-sm-8 col-md-offset-2 well well-opacity-2">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h2 class="margin-top-0 text-primary text-center section-title">
      Sign in
    </h2>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <% if devise_mapping.recoverable? %>
        <%= link_to 'Forgot password?', new_password_path(resource_name) %>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end %>

    <div class="row">
      <div class="<%= devise_mapping.registerable? ? 'col-sm-6' : 'col-sm-12' %>">
        <%= f.submit 'Sign in', :class => 'btn btn-primary btn-block' %>
      </div>
      <% if devise_mapping.registerable? %>
        <div class="col-sm-6">
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-default btn-block' %>
        </div>
      <% end %>
    </div>

  <% end %>
</div>
